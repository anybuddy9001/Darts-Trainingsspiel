<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="io.github.anybuddy9001.dartstrainingsspiel.LogController">
    <center>
        <TextArea fx:id="logOut" editable="false" focusTraversable="false" prefHeight="200.0" prefWidth="200.0"
                  promptText="%logWindow.text.prompt" wrapText="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="6.0" left="6.0" right="6.0" top="6.0"/>
            </BorderPane.margin>
        </TextArea>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button mnemonicParsing="false" onAction="#clearLogScreen" text="%logWindow.button.clear"/>
                <Button mnemonicParsing="false" onAction="#hideLog" text="%logWindow.button.close"/>
            </buttons>
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0"/>
            </padding>
        </ButtonBar>
    </bottom>
</BorderPane>
